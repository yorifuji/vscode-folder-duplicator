{
  "name": "folder-duplicator",
  "displayName": "Folder Duplicator",
  "description": "Duplicate current workspace folder and open in new window",
  "version": "0.0.3",
  "publisher": "yorifuji",
  "author": "yorifuji",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/yorifuji/vscode-folder-duplicator",
  "bugs": {
    "url": "https://github.com/yorifuji/vscode-folder-duplicator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yorifuji/vscode-folder-duplicator.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onCommand:folder-duplicator.duplicate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "folder-duplicator.duplicate",
        "title": "Duplicate Current Folder"
      }
    ],
    "configuration": {
      "title": "Folder Duplicator",
      "properties": {
        "folderDuplicator.excludePatterns": {
          "type": "array",
          "default": [],
          "description": "Patterns to exclude when duplicating folders (e.g., ['node_modules', '.git', '*.log'])",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "npm run compile && vsce package --no-dependencies",
    "package:install": "npm run package && code --install-extension folder-duplicator-*.vsix"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  }
}
